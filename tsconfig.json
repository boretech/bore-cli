{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "sourceMap": false,
    "declaration": false,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "removeComments": false,
    "importHelpers": true,
    "strict": true,
    "lib": ["es2015"],
  },
  "include": [
    "src"
  ]
}